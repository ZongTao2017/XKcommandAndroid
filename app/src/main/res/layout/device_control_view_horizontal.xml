<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="40dp"
        android:orientation="horizontal">
        <FrameLayout
            android:id="@+id/frame_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <com.xkglow.xkcommand.View.ControlButton
                android:id="@+id/button_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.xkglow.xkcommand.View.ControlButton
                android:id="@+id/button_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.xkglow.xkcommand.View.ControlButton
                android:id="@+id/button_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.xkglow.xkcommand.View.ControlButton
                android:id="@+id/button_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.xkglow.xkcommand.View.ControlButton
                android:id="@+id/button_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.xkglow.xkcommand.View.ControlButton
                android:id="@+id/button_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.xkglow.xkcommand.View.ControlButton
                android:id="@+id/button_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.xkglow.xkcommand.View.ControlButton
                android:id="@+id/button_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.xkglow.xkcommand.View.PowerView
                android:id="@+id/power"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/status_frame"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="40dp">
            <ImageView
                android:id="@+id/status_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/system_status_base_vertical"
                android:layout_gravity="center"/>
            <LinearLayout
                android:id="@+id/status_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="3dp"
                android:orientation="vertical"
                android:layout_gravity="center">
                <TextView
                    android:id="@+id/status_volt"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray"
                    android:text="0.0V" />
                <TextView
                    android:id="@+id/status_amp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray"
                    android:text="0.0A" />
                <TextView
                    android:id="@+id/status_temp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray"
                    android:text="0\u2109" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>