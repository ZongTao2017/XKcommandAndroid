<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/gray_1"
            android:gravity="center_vertical"
            android:paddingStart="15dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:text="Device List"
            android:textStyle="bold"/>
        <LinearLayout
            android:id="@+id/paired_device_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.xkglow.xkcommand.View.PairedDeviceView
                android:id="@+id/device_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <com.xkglow.xkcommand.View.PairedDeviceView
                android:id="@+id/device_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/gray_1"
            android:gravity="center_vertical"
            android:paddingStart="15dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:text="Unpaired"
            android:textStyle="bold"/>
        <LinearLayout
            android:id="@+id/unpaired_device_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.xkglow.xkcommand.View.UnpairedDeviceView
                android:id="@+id/device_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>